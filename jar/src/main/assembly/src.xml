<assembly>
  <id>jar-with-dependencies</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <scope>runtime</scope>
    </dependencySet>
    <dependencySet>
      <unpack>true</unpack>
      <scope>system</scope>
      <excludes>
      	<exclude>${project.build.outputDirectory}</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>    	  
      	<directory>${project.build.outputDirectory}</directory>
    </fileSet>
  </fileSets>
</assembly>